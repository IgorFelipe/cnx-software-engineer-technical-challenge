{
  "name": "api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "tsx test-api.ts",
    "test:watch": "tsx watch test-api.ts",
    "test:unit": "vitest run test/unit",
    "test:unit:watch": "vitest watch test/unit",
    "test:integration": "vitest run test/integration",
    "test:integration:watch": "vitest watch test/integration",
    "test:all": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:chaos": "tsx test/chaos/chaos-scenarios.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "backfill:outbox": "tsx src/scripts/backfill-outbox.ts",
    "backfill:dry-run": "tsx src/scripts/backfill-outbox.ts --dry-run"
  },
  "keywords": [
    "email",
    "api",
    "rate-limiting"
  ],
  "author": "",
  "license": "ISC",
  "description": "API for batch email sending with rate limiting",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.17.1",
    "amqplib": "^0.10.9",
    "async-mutex": "^0.5.0",
    "axios": "^1.12.2",
    "bottleneck": "^2.19.5",
    "csv-parse": "^6.1.0",
    "csv-parser": "^3.2.0",
    "disposable-email-domains": "^1.0.62",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "form-data-encoder": "^4.1.0",
    "formdata-node": "^6.0.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.1.0",
    "prom-client": "^15.1.3",
    "undici": "^7.16.0",
    "uuid": "^13.0.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/form-data": "^2.2.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.3",
    "@vitest/ui": "^4.0.4",
    "form-data": "^4.0.4",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.2",
    "prisma": "^6.17.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  }
}
